                    style={{
                      width: '100%',
                      height: 'auto',
                      borderRadius: '8px',
                      display: 'block',
                      maxWidth: '100%'
                    }}
                    onLoad={() => {
                      console.log('üñºÔ∏è Image loaded, updating frame size...');
                      const img = videoRef.current;
                      if (img) {
                        const rect = img.getBoundingClientRect();
                        setFrameSize({
                          width: img.naturalWidth || rect.width,
                          height: img.naturalHeight || rect.height
